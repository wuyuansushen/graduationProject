<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="graduation.AppShell"
       xmlns:views="clr-namespace:graduation.Views"
       BackgroundColor="#005a69"
       >

    <Shell.Resources>
        <ResourceDictionary>
            <Color x:Key="jnuColor">#005a69</Color>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor"
            Value="#005a69" />
                <Setter Property="Shell.TabBarTitleColor"
            Value="White" />
                <Setter Property="Shell.TabBarUnselectedColor"
            Value="Gray" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>
    
    <TabBar>
        <Tab Title="新建下载" Icon="icon_download.png">
            <ShellContent ContentTemplate="{DataTemplate views:DownloadPage}"></ShellContent>
        </Tab>
        <Tab Title="下载管理" Icon="icon_torrentlist.png">
            <ShellContent ContentTemplate="{DataTemplate views:TorrentPage}"/>
        </Tab>
    </TabBar>
</Shell>